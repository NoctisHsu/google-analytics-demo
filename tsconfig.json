{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "es2015",
      "es2017",
      "es7",
      "es6",
      "dom"
    ],
    "strict": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "baseUrl": "./",
    "outDir": "dist",
    "typeRoots": [
      "node_modules/@types"
    ],
    "esModuleInterop": true,
    "declaration": true,
    "jsx": "react"
  },
  "include": [
    "src/**/*.tsx",
    "src/**/*.ts",
    "test/**/*.spec.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}